{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "src/lib",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    
    "moduleResolution": "node",
    "resolveJsonModule": true,
    //"isolatedModules": true,
    "outDir": "dist",
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
